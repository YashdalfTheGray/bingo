{
  "name": "bingo",
  "version": "1.0.0",
  "description": "a thing that generates bingo sheets",
  "main": "index.js",
  "scripts": {
    "clean:assets": "npx rimraf public/**/*.{js,map,css,json} public/artifacts",
    "clean:server": "npx rimraf dist/",
    "clean:all": "npm run clean:assets && npm run clean:server",
    "preassets:prod": "npm run clean:assets",
    "assets:prod": "webpack --mode=production",
    "preserver:prod": "npm run clean:server",
    "server:prod": "tsc --outDir dist --project tsconfig.server.json",
    "prestart:prod": "npm run server:prod && npm run assets:prod",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "assets:dev": "webpack --mode=development",
    "assets:watch": "webpack --mode=development --watch",
    "server:dev": "NODE_ENV=development ts-node --project tsconfig.server.json server/index.ts",
    "start:dev": "concurrently -c cyan,green \"npm:assets:watch\" \"npm:server:dev\"",
    "start": "npm run start:dev",
    "autoprefixer-info": "npx autoprefixer --info",
    "show-stats": "npx open ./dist/artifacts/stats.html",
    "test": "nyc ava",
    "test:no-coverage": "ava",
    "open-coverage": "npx open coverage/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YashdalfTheGray/bingo.git"
  },
  "keywords": [
    "bingo"
  ],
  "author": "Yash Kulshrestha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/YashdalfTheGray/bingo/issues"
  },
  "homepage": "https://github.com/YashdalfTheGray/bingo#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "include": [
      "client/**/*.ts",
      "common/**/*.ts",
      "server/**/*.ts"
    ],
    "exclude": [
      "client/**/*.spec.ts",
      "common/**/*.spec.ts",
      "server/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/morgan": "^1.9.0",
    "@types/xxhashjs": "^0.2.2",
    "body-parser": "^1.19.0",
    "chalk": "^4.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.0",
    "xxhashjs": "^0.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@types/node": "^14.0.1",
    "@types/webpack": "^4.41.13",
    "@types/webpack-dev-middleware": "^3.7.1",
    "@types/webpack-env": "^1.15.2",
    "@types/webpack-hot-middleware": "^2.25.3",
    "autoprefixer": "^9.8.0",
    "ava": "^3.8.2",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.2.0",
    "core-js": "^3.6.5",
    "css-loader": "^3.5.3",
    "cssnano": "^4.1.10",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "nyc": "^15.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "regenerator-runtime": "^0.13.5",
    "sass-loader": "^8.0.2",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.9.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-visualizer-plugin": "^0.1.11"
  }
}
